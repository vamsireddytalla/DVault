<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="800"
        motion:autoTransition="none"
        motion:motionInterpolator="easeIn">
        <KeyFrameSet>

            <KeyAttribute
                motion:motionTarget="@+id/imageView"
                motion:framePosition="40"
                android:rotation="0" />
            <KeyAttribute
                motion:motionTarget="@+id/imageView"
                motion:framePosition="100"
                android:rotation="180" />
            <KeyPosition
                motion:motionTarget="@+id/imageView"
                motion:framePosition="40"
                motion:keyPositionType="deltaRelative"
                motion:percentX="0"
                motion:percentY="0" />
            <KeyAttribute
                motion:motionTarget="@+id/imageView"
                motion:framePosition="40"
                android:scaleX="1"
                android:scaleY="1" />
            <KeyAttribute
                motion:motionTarget="@+id/imageView"
                motion:framePosition="100"
                android:scaleX="0.8"
                android:scaleY="0.8" />
            <KeyPosition
                motion:motionTarget="@+id/googleSignIn"
                motion:framePosition="30"
                motion:keyPositionType="deltaRelative"
                motion:percentX="0"
                motion:percentY="0" />
            <KeyPosition
                motion:motionTarget="@+id/textView"
                motion:framePosition="40"
                motion:keyPositionType="deltaRelative"
                motion:percentX="0"
                motion:percentY="0" />
        </KeyFrameSet>
        <OnClick motion:targetId="@+id/imageView" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/imageView"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.424" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/googleSignIn"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintTop_toBottomOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/cloud"
            motion:layout_constraintBottom_toTopOf="@+id/googleSignIn"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.394"
            motion:layout_constraintHorizontal_bias="0.494" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/textView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="20dp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="163dp"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/googleSignIn"
            android:id="@+id/privacyPolicy" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/imageView"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.424" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/googleSignIn"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/cloud"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.394"
            motion:layout_constraintHorizontal_bias="0.494"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/textView"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toTopOf="@+id/googleSignIn"
            motion:layout_constraintTop_toTopOf="@+id/imageView"
            motion:layout_constraintVertical_bias="0.471" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView11" />
        <Constraint
            motion:layout_constraintBottom_toTopOf="@+id/googleSignIn"
            android:id="@+id/textView18" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/textView19"
            motion:layout_constraintStart_toStartOf="@+id/googleSignIn"
            motion:layout_constraintEnd_toEndOf="@+id/googleSignIn"
            motion:layout_constraintTop_toBottomOf="@+id/googleSignIn"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />
        <Constraint
            motion:layout_editor_absoluteY="693dp"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="@+id/googleSignIn"
            android:layout_width="wrap_content"
            android:id="@+id/privacyPolicy"
            motion:layout_constraintStart_toStartOf="@+id/googleSignIn"
            motion:layout_constraintTop_toBottomOf="@+id/googleSignIn" />
    </ConstraintSet>
</MotionScene>